<Page x:Class="client.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="Page1">

    <Grid>
        <TextBox Margin="583,-242,0,0" Width="100" Height="25" Name="PasswordInput"/>
        <TextBox Margin="583,-354,0,0" Width="100" Height="25" Name="UsernameInput"/>
        <TextBox Margin="583,-135,0,0" Width="100" Height="25" Name="EmailInput"/>

        <TextBlock Text="Username" Margin="370,163"/>
        <TextBlock Text="Password" Margin="370,220"/>
        <TextBlock Text="Email" Margin="370, 273"/>

        <Button Name="SignUp1" Content="SignUp" HorizontalAlignment="Left" Click="SignUpToServer" 
                Margin="370,410,0,0" VerticalAlignment="Top" Width="150" Height="70" />
        <Button Name="Quit" Content="Quit" HorizontalAlignment="Left" Click="Quit_Click"
                Margin="745,410,0,0" VerticalAlignment="Top" Width="150" Height="70"/>

    </Grid>
</Page>

