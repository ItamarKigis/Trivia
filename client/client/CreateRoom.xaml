<Page x:Class="client.CreateRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="Page1">
    <StackPanel>
        <TextBlock Text="room name" Margin="100,100,0,0"/>
        <TextBox Margin="-900,10,0,0" Width="200"/>

        <TextBlock Text="number of players" Margin="100,100,0,0"/>
        <TextBox Margin="-900,10,0,0" Width="200"/>

        <TextBlock Text="number of questions" Margin="100,100,0,0"/>
        <TextBox Margin="-900,10,0,0" Width="200"/>

        <TextBlock Text="number of questions" Margin="100,100,0,0"/>
        <TextBox Margin="-900,10,0,0" Width="200"/>

        <Button Name="Send" Content="Send" HorizontalAlignment="Left" Margin="590,0,0,0" VerticalAlignment="Top" Width="150" Height="50"
                Click="Send_Click"/>
    </StackPanel>
</Page>